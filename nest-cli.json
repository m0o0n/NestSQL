{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../sql/**/*.sql",
        "outDir": "dist/sql"
      },
      {
        "include": "../generated/prisma/**/*",
        "outDir": "dist/generated"
      }
    ]
  }
}
